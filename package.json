{
  "name": "sfdx-hardis",
  "description": "Hardis-Group Toolbox for Salesforce DX",
  "version": "1.3.3",
  "author": "NicolasVuillamy @nvuillam",
  "bugs": "https://github.com/hardisgroupcom/sfdx-hardis/issues",
  "dependencies": {
    "@amplitude/node": "^1.3.2",
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/errors": "^1",
    "@salesforce/command": "^2",
    "@salesforce/core": "^2",
    "@salesforce/ts-sinon": "^1.2.4",
    "chalk": "^4.1.0",
    "changed-git-files": "^0.0.1",
    "columnify": "^1.5.4",
    "cosmiconfig": "^7.0.0",
    "cross-spawn": "^7.0.3",
    "csv-stringify": "^5.6.1",
    "email-validator": "^2.0.4",
    "extract-zip": "^2.0.1",
    "fs-extra": "^9.1.0",
    "glob-promise": "^3.4.0",
    "js-yaml": "^4.0.0",
    "moment": "^2.29.1",
    "ms-teams-webhook": "^1.0.4",
    "prompts": "^2.4.0",
    "psl": "^1.8.0",
    "read-pkg-up": "^7.0.1",
    "simple-git": "^2.34.2",
    "sort-array": "^4.1.3",
    "tslib": "^1",
    "update-notifier": "^5.1.0",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@oclif/plugin-help": "^2",
    "@oclif/test": "^1",
    "@salesforce/dev-config": "1.4.1",
    "@types/chai": "^4",
    "@types/mocha": "^5",
    "@types/node": "^10",
    "chai": "^4",
    "globby": "^8",
    "mocha": "^5",
    "nyc": "^14",
    "rimraf": "^3.0.2",
    "ts-node": "^8",
    "tslint": "^5"
  },
  "resolutions": {
    "graceful-fs": "^4.2.4"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "/lib",
    "/messages",
    "/defaults",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/hardisgroupcom/sfdx-hardis",
  "keywords": [
    "sfdx-plugin"
  ],
  "license": "AGPL-3.0",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "sfdx",
    "hooks": {
      "init": [
        "./lib/hooks/init/check-upgrade",
        "./lib/hooks/init/check-local-sfdx-hardis-files"
      ],
      "prerun": [
        "./lib/hooks/prerun/auth"
      ],
      "auth": [
        "./lib/hooks/prerun/auth"
      ],
      "postrun": [
        "./lib/hooks/postrun/notify",
        "./lib/hooks/postrun/store-cache"
      ]
    },
    "topics": {
      "hardis": {
        "description": "Hardis tools"
      }
    },
    "devPlugins": [
      "@oclif/plugin-help"
    ]
  },
  "repository": "hardisgroupcom/sfdx-hardis",
  "scripts": {
    "compile": "tsc --watch",
    "lint": "tslint --project . --config tslint.json --format stylish",
    "lint:fix": "tslint --project . --config tslint.json --format stylish --fix",
    "postpack": "rimraf oclif.manifest.json",
    "posttest": "tslint -p test -t stylish",
    "prepack": "rimraf lib && tsc -b && oclif-dev manifest && oclif-dev readme",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif-dev readme && git add README.md"
  }
}
