{
  "name": "sfdx-hardis",
  "description": "Swiss Army Knife for Salesforce CLI: CI/CD, Monitoring, and more !",
  "version": "5.0.0",
  "dependencies": {
    "@actions/github": "^6.0.0",
    "@gitbeaker/node": "^35.8.1",
    "@oclif/config": "^1.18.17",
    "@oclif/core": "^4",
    "@salesforce/core": "^7.2.0",
    "@salesforce/sf-plugins-core": "^10.0.0",
    "@slack/types": "^2.12.0",
    "@slack/web-api": "^7.3.4",
    "@supercharge/promise-pool": "^3.2.0",
    "@xmldom/xmldom": "^0.8.10",
    "axios": "^1.7.5",
    "azure-devops-node-api": "^14.0.2",
    "bitbucket": "^2.12.0",
    "chalk": "^5.3.0",
    "columnify": "^1.6.0",
    "cosmiconfig": "^9.0.0",
    "email-validator": "^2.0.4",
    "exceljs": "^4.4.0",
    "extract-zip": "^2.0.1",
    "fs-readdir-recursive": "^1.1.0",
    "glob": "^11.0.0",
    "inquirer": "^10.1.8",
    "isomorphic-dompurify": "^2.15.0",
    "jira-client": "^8.2.2",
    "jsforce": "^3.4.1",
    "keyv": "^5.0.1",
    "make-fetch-happen": "^13.0.1",
    "markdown-toc": "^1.2.0",
    "mega-linter-runner": "^8.0.0",
    "moment": "^2.30.1",
    "openai": "^4.56.1",
    "ora": "^8.1.0",
    "papaparse": "^5.4.1",
    "pascalcase": "^2.0.0",
    "puppeteer": "^23.2.0",
    "read-package-up": "^11.0.0",
    "set-value": "^4.1.0",
    "simple-git": "^3.25.0",
    "sort-array": "^4.1.5",
    "split": "^1.0.1",
    "string-template": "^1.0.0",
    "update-notifier": "^7.3.0",
    "ws": "^8.18.0",
    "xpath": "^0.0.34"
  },
  "devDependencies": {
    "@oclif/plugin-command-snapshot": "^5.1.9",
    "@salesforce/cli-plugins-testkit": "^5.3.10",
    "@salesforce/dev-config": "^4.3.1",
    "@salesforce/dev-scripts": "^10",
    "@types/columnify": "^1.5.4",
    "@types/cosmiconfig": "^6.0.0",
    "@types/cross-spawn": "^6.0.6",
    "@types/extract-zip": "^2.0.1",
    "@types/fs-extra": "^11.0.4",
    "@types/fs-readdir-recursive": "^1.1.3",
    "@types/glob": "^8.1.0",
    "@types/inquirer": "^9.0.7",
    "@types/jira-client": "^7.1.9",
    "@types/make-fetch-happen": "^10.0.4",
    "@types/papaparse": "^5.3.14",
    "@types/sort-array": "^4.1.2",
    "@types/update-notifier": "^6.0.8",
    "@types/ws": "^8.5.12",
    "eslint-plugin-sf-plugin": "^1.18.6",
    "oclif": "^4.14.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "/lib",
    "/messages",
    "/oclif.manifest.json",
    "/oclif.lock"
  ],
  "keywords": [
    "force",
    "salesforce",
    "salesforcedx",
    "sf",
    "sf-plugin",
    "sfdx",
    "sfdx-plugin"
  ],
  "license": "BSD-3-Clause",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "sf",
    "topicSeparator": " ",
    "devPlugins": [
      "@oclif/plugin-help"
    ],
    "topics": {
      "hello": {
        "description": "Commands to say hello."
      }
    },
    "flexibleTaxonomy": true,
    "hooks": {
      "init": [
        "./lib/hooks/init/log",
        "./lib/hooks/init/check-upgrade",
        "./lib/hooks/init/check-local-sfdx-hardis-files",
        "./lib/hooks/init/start-ws-client"
      ],
      "prerun": [
        "./lib/hooks/prerun/auth",
        "./lib/hooks/prerun/check-dependencies"
      ],
      "auth": [
        "./lib/hooks/prerun/auth"
      ],
      "postrun": [
        "./lib/hooks/postrun/notify",
        "./lib/hooks/postrun/store-cache"
      ]
    }
  },
  "scripts": {
    "build": "wireit",
    "clean": "sf-clean",
    "clean-all": "sf-clean all",
    "compile": "wireit",
    "docs": "sf-docs",
    "format": "wireit",
    "link-check": "wireit",
    "lint": "wireit",
    "postinstall": "yarn husky install",
    "postpack": "sf-clean --ignore-signing-artifacts",
    "prepack": "sf-prepack",
    "test": "wireit",
    "test:nuts": "nyc mocha \"**/*.nut.ts\" --slow 4500 --timeout 600000 --parallel",
    "test:only": "wireit",
    "version": "oclif readme"
  },
  "publishConfig": {
    "access": "public"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "compile",
        "lint"
      ]
    },
    "compile": {
      "command": "tsc -p . --pretty --incremental",
      "files": [
        "src/**/*.ts",
        "**/tsconfig.json",
        "messages/**"
      ],
      "output": [
        "lib/**",
        "*.tsbuildinfo"
      ],
      "clean": "if-file-deleted"
    },
    "format": {
      "command": "prettier --write \"+(src|test|schemas)/**/*.+(ts|js|json)|command-snapshot.json\"",
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "schemas/**/*.json",
        "command-snapshot.json",
        ".prettier*"
      ],
      "output": []
    },
    "lint": {
      "command": "eslint src test --color --cache --cache-location .eslintcache",
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "messages/**",
        "**/.eslint*",
        "**/tsconfig.json"
      ],
      "output": []
    },
    "test:compile": {
      "command": "tsc -p \"./test\" --pretty",
      "files": [
        "test/**/*.ts",
        "**/tsconfig.json"
      ],
      "output": []
    },
    "test": {
      "dependencies": [
        "test:compile",
        "test:only",
        "lint"
      ]
    },
    "test:only": {
      "command": "nyc mocha \"test/**/*.test.ts\"",
      "env": {
        "FORCE_COLOR": "2"
      },
      "files": [
        "test/**/*.ts",
        "src/**/*.ts",
        "**/tsconfig.json",
        ".mocha*",
        "!*.nut.ts",
        ".nycrc"
      ],
      "output": []
    },
    "test:command-reference": {
      "command": "node --loader ts-node/esm --no-warnings=ExperimentalWarning \"./bin/dev.js\" commandreference:generate --erroronwarnings",
      "files": [
        "src/**/*.ts",
        "messages/**",
        "package.json"
      ],
      "output": [
        "tmp/root"
      ]
    },
    "test:deprecation-policy": {
      "command": "node --loader ts-node/esm --no-warnings=ExperimentalWarning \"./bin/dev.js\" snapshot:compare",
      "files": [
        "src/**/*.ts"
      ],
      "output": [],
      "dependencies": [
        "compile"
      ]
    },
    "test:json-schema": {
      "command": "node --loader ts-node/esm --no-warnings=ExperimentalWarning \"./bin/dev.js\" schema:compare",
      "files": [
        "src/**/*.ts",
        "schemas"
      ],
      "output": []
    },
    "link-check": {
      "command": "node -e \"process.exit(process.env.CI ? 0 : 1)\" || linkinator \"**/*.md\" --skip \"CHANGELOG.md|node_modules|test/|confluence.internal.salesforce.com|my.salesforce.com|%s\" --markdown --retry --directory-listing --verbosity error",
      "files": [
        "./*.md",
        "./!(CHANGELOG).md",
        "messages/**/*.md"
      ],
      "output": []
    }
  },
  "exports": "./lib/index.js",
  "type": "module"
}
