{
  "extends": "@salesforce/dev-config/tsconfig-strict-esm.js",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.json"
  ],
  "exclude": [
    "lib",
    "defaults",
    "docs",
    "hardis-report",
    "**/*.d.ts"
  ]
}