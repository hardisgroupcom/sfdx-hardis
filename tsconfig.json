{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2019",
    "lib": ["es2019"],
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./lib",
    "importHelpers": true,
    "resolveJsonModule": true,
    "types": ["node", "mocha"]
  },
  "include": ["./src/**/*"]
}
